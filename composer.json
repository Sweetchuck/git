{
    "type": "library",
    "name": "sweetchuck/git",
    "description": "Git related helpers classes.",
    "keywords": [
        "git"
    ],
    "authors": [
        {
            "name": "Andor",
            "role": "Maintainer",
            "homepage": "https://github.com/Sweetchuck"
        }
    ],
    "support": {
        "source": "https://github.com/Sweetchuck/git",
        "issues": "https://github.com/Sweetchuck/git/issues"
    },
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "sweetchuck/git-hooks": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "ext-dom": "*",
        "ext-json": "*",
        "nuvoleweb/robo-config": "^3.0",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.5",
        "sweetchuck/git-hooks": "2.x-dev",
        "sweetchuck/robo-git": "4.x-dev",
        "sweetchuck/robo-phpcs": "4.x-dev",
        "sweetchuck/robo-phpstan": "3.x-dev",
        "symfony/error-handler": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Git\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Git\\Tests\\": "tests/src/"
        },
        "classmap": [
            "RoboFile.php"
        ]
    }
}
